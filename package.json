{
  "name": "todos_mongo",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "prestart": "npm run build",
    "build": "tsc",
    "start": "node .",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "docker": "docker-compose -p todo up --no-recreate todo-api",
    "docker:build": "docker-compose -p todo rm -vfs todo-api && docker-compose -p todo build todo-api",
    "docker:test": "docker-compose -p todo run --rm todo-api npm run test:watch",
    "docker:test:cov": "docker-compose -p todo run --rm todo-api npm t",
    "docker:debug": "docker-compose -p todo -f docker-compose.yml -f docker-compose.debug.yml run --rm --service-ports todo-api",
    "lint": "eslint . --ext .ts",
    "style-fix": "npm run lint -- --fix",
    "test": "NODE_ENV=test nyc mocha ./src ./test",
    "test:watch": "nodemon -x 'NODE_ENV=test mocha ./src ./test'"
  },
  "keywords": [],
  "author": "Vasyl Kushnir",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/nconf": "^0.10.1",
    "@types/node": "^16.7.13",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "axios": "^0.21.4",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "mocha": "^9.1.2",
    "nodemon": "^2.0.13",
    "nyc": "^15.1.0",
    "openapi-comment-parser": "^1.0.0",
    "prettier": "^2.4.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "mongoose": "^6.0.6",
    "nconf": "^0.11.3",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.3.3"
  },
  "description": ""
}
